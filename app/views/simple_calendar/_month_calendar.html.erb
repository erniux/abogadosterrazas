<div class="simple-calendar">
  <div class="calendar-heading">
    <div class="col-md-4">
    <span><%= link_to t('simple_calendar.previous', default: 'Anterior '), calendar.url_for_previous_view %></span>|
    <span><%= link_to t('simple_calendar.next', default: ' Siguiente'), calendar.url_for_next_view %></span>
    
  </div>
  <div class="col-md-4">
    <h3><span class="calendar-title"><%= t('date.month_names')[start_date.month].capitalize %> <%= start_date.year %></span></h3>
  </div>
  <div class="col-md-4">
    
  </div>
  </div><br><br>
  <div class="row">
    <div class="col-md-6">
      <span class="content-box-buro">Burocr√°tico</span>
      <span class="content-box-local">Junta Local</span>
      <span class="content-box-federal">Junta Federal</span>
    </div>
  </div><br>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
              <% else %>
                <% block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>