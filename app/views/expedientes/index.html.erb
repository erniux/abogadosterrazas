<div>
	<h3>Catálogo de Expedientes</h3>

  <%= form_tag expedientes_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag 'term', params[:term], placeholder: "Ingrese criterio de búsqueda", class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= submit_tag 'Buscar', class: "btn btn-info btn-lg" %>&nbsp;<%= link_to "Crear Expediente", new_expediente_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <% end %>
   
   <% if params[:term].blank? %>
    <p><%= link_to_previous_page @expedientes, 'Previa', class: 'btn btn-primary btn-sm'  %>
       <%= link_to_next_page @expedientes, 'Siguiente', class: 'btn btn-primary btn-sm' %></p>
   <% end %>

   <br>
    <div class="row">
      <div class="col-md-6">
        <span class="content-box-buro">Burocrático</span>
        <span class="content-box-local">Junta Local</span>
        <span class="content-box-federal">Junta Federal</span>
      </div>
    </div><br>

   <div class="anios">
    <ul>

      <li>2020</li>
      <li>2019</li>
      <li>2018</li>
      <li>2017</li>
      <li>2016</li>
      <li>2015</li>
      <li>2014</li>
      <li>2013</li>
    </ul>
  </div>

<table class="table">
  <thead>
    <tr>
      <th>Año</th>
      <th>Expediente</th>
      <th>Demandante</th>
      <th>Demandado</th>
      <th>Entidad Responsable</th>
      <th>Estado Procesal</th>
    </tr>
  </thead>

  <tbody>
    <% @expedientes.each do |expediente| %>
      <tr>
        <td><%= expediente.anio %></td>
        <td><%= link_to expediente.expediente, expediente %></td>
        <td><%= expediente.demandante %></td>
        <td><%= expediente.demandado %></td>
        <% if expediente.entidad_responsable == 'Junta Federal' || expediente.entidad_responsable == 'JUNTA FEDERAL' %>
          <td class="content-box-federal"><%= expediente.entidad_responsable %></td>
        <% elsif expediente.entidad_responsable == 'Junta Local' || expediente.entidad_responsable == 'JUNTA LOCAL'  %>
          <td class="content-box-local"><%= expediente.entidad_responsable %></td>
        <% elsif expediente.entidad_responsable == 'Burocrático' || 'BURÓCRATICO'  %>
          <td class="content-box-Buro"><%= expediente.entidad_responsable %></td>
        <% else %>
          <td><%= expediente.entidad_responsable %></td>
        <% end %>
        <td><%= expediente.estado_procesal %></td>

         
         
      </tr>
    <% end %>
  </tbody>
</table>

</div>  