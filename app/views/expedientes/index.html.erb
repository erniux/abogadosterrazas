<div>
	<h3>Catálogo de Expedientes</h3>

  <%= form_tag expedientes_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag 'term', params[:term], placeholder: "Ingrese no. expediente o nombre demandante", class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= submit_tag 'Buscar', class: "btn btn-info btn-lg" %>&nbsp;<%= link_to "Crear Expediente", new_expediente_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <% end %>

   

<table class="table">
  <thead>
    <tr>
      <th>Año</th>
      <th>Expediente</th>
      <th>Demandante</th>
      <th>Demandado</th>
      <th>Entidad Responsable</th>
      <th>Estado Procesal</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @expedientes.each do |expediente| %>
      <tr>
        <td><%= expediente.anio %></td>
        <td><%= expediente.expediente %></td>
        <td><%= expediente.demandante %></td>
        <td><%= expediente.demandado %></td>
        <td><%= expediente.entidad_responsable %></td>
        <td><%= expediente.estado_procesal %></td>

        <td><%= link_to 'Audiencias',  expediente  %></td> 
        <td><%= link_to 'Modificar', edit_expediente_path(expediente) %></td>
         
      </tr>
    <% end %>
  </tbody>
</table>

</div>  