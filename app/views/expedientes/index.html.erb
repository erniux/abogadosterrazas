<div>
	<h3>Catálogo de Expedientes</h3>

  <%= form_tag expedientes_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag 'term', params[:term], placeholder: "Ingrese criterio de búsqueda", class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= submit_tag 'Buscar', class: "btn btn-info btn-lg" %>&nbsp;<%= link_to "Crear Expediente", new_expediente_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <% end %>
   
  <div class="text-center">
    <%= paginate @expedientes %>
  </div>

   <br>
    <div class="row">
      <div class="col-md-6">
        <span class="content-box-buro">Burocrático</span>
        <span class="content-box-local">Junta Local</span>
        <span class="content-box-federal">Junta Federal</span>
      </div>
    </div><br>

   <div class="anios">
    <ul>
      <li class="content-box-brown">2020</li>
      <li class="content-box-pink">2019</li>
      <li class="content-box-buro">2018</li>
      <li class="content-box-orange">2017</li>
      <li class="content-box-federal">2016</li>
      <li class="content-box-rojo">2015</li>
      <li class="content-box-grey">2014</li>
      <li class="content-box-purple">2013</li>
      <li class="content-box-blue">2012</li>
      <li class="content-box-black">2011</li>
    </ul>
  </div>

<table class="table">
  <thead>
    <tr>
      <th>Expediente</th>
      <th>Demandante</th>
      <th>Demandado</th>
      <th>Entidad Responsable</th>
      <th>Estado Procesal</th>
    </tr>
  </thead>

  <tbody>
    <% @expedientes.each do |expediente| %>
      <tr>
        <% case expediente.anio %>
        <% when 2012 %>
          <td class="content-box-blue"><%= link_to expediente.expediente, expediente  %></td>
        <% when 2013 %>
          <td class="content-box-purple"><%= link_to expediente.expediente, expediente  %></td>
        <% when 2014 %>
          <td class="content-box-grey"><%= link_to expediente.expediente, expediente  %></td>
        <% when 2015 %>
          <td class="content-box-rojo"><%= link_to expediente.expediente, expediente  %></td>
        <% when 2016 %>
          <td class="content-box-federal"><%= link_to expediente.expediente, expediente  %></td>
        <% when 2017 %>
          <td class="content-box-orange"><%= link_to expediente.expediente, expediente  %></td>
        <% when 2018 %>
          <td class="content-box-buro"><%= link_to expediente.expediente, expediente  %></td>
        <% when 2019 %>
          <td class="content-box-pink"><%= link_to expediente.expediente, expediente  %></td>
        <% when 2020 %>
          <td class="content-box-brown"><%= link_to expediente.expediente, expediente  %></td>
        <% else %>
          <td class="content-box-black"><%= link_to expediente.expediente, expediente  %></td>
        <% end %>

        <td><%= expediente.demandante %></td>
        <td><%= expediente.demandado %></td>
        <%= color_entidad expediente.entidad_responsable %>
        <td><%= expediente.estado_procesal %></td>


      </tr>
    <% end %>
  </tbody>
</table>

</div>  