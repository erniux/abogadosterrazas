 <div class="row">
	<div class="col-md-6">
		<h3>Número Expediente: <%= @expediente.expediente %>&nbsp;&nbsp;Año: <%= @expediente.anio %></h3>
		<h4><%= @expediente.demandante  %> <strong>vs</strong> <%= @expediente.demandado %></h4>
		<h5>INSTANCIA:&nbsp;<%= @expediente.entidad_responsable.nombre.upcase %> </h5>
		<h5>ESTADO PROCESAL:&nbsp;<%= @expediente.estatus_procesal.estatus.upcase %></h5>

	</div>
	<div class="col-md-6">
		<h4>EXPEDIENTE</h4>
		<p>Ubicación: <%= @expediente.ubicacion_fisica.upcase %>, <%= @expediente.despacho.upcase %></p>
		<p>Responsable: <%= @expediente.socio %></p>
		<p>Recomendado: <%= @expediente.recomendado %></p>
		<p>Sociedad: <%= @expediente.en_sociedad %></p>
		 
		<% if !@expediente.referencia1.nil? %>
			<h5>Referencias</h5>
			<p><%= @expediente.referencia1.upcase %> </p>
		<% end %>
		<% if !@expediente.referencia2.nil? %>
			<p><%= @expediente.referencia2.upcase %> </p>
		<% end %>
		<% if !@expediente.referencia3.nil? %>
			<p><%= @expediente.referencia3.upcase %> </p>
		<% end %>
		<p>COMENTARIOS: <%= @expediente.comentarios.to_s.upcase %></p>
		
	</div>
</div>	 

<hr>
<h3> Audiencias </h3>

<table class="table">
	<thead>
   		<tr>
   			<th>ID</th>
     		<th>Fecha inicio</th>
			 <th>Fecha término</th>
     		<th>Expediente</th>
     		<th>Instancia</th>
     		<th>Asignado</th>
     		<th>Estatus</th>
     		<th>Comentarios</th>
     		
   		</tr>
  	</thead>
		
	<tbody>
		<% @expediente.audiencia_expedientes.each do |audiencia| %>
			<tr>
				<td><%= audiencia.id %></td>
				<td><%= audiencia.fecha.strftime("%d/%m/%Y %H:%M:%S") if !audiencia.fecha.nil? %></td>
				<td><%= audiencia.fecha_fin.strftime("%d/%m/%Y %H:%M:%S") if !audiencia.fecha_fin.nil? %></td>
				<td><%= audiencia.expediente.expediente %></td> 
				<td><%= audiencia.expediente.entidad_responsable.nombre %></td>
				<td><%= audiencia.asignado.upcase if !audiencia.asignado.nil? %></td>
				<td><%= audiencia.estatus_audiencia.estatus.upcase %>
				<% if audiencia.comentarios.nil? %>
					<td><%= audiencia.comentarios %></td>
				<% else %>
					<td><%= audiencia.comentarios.upcase %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
	
<%= link_to "Modificar", edit_expediente_path(@expediente), class: "btn btn-success btn-lg" %>
<%= link_to 'Expedientes', expedientes_path, class: "btn btn-info btn-lg" %>
