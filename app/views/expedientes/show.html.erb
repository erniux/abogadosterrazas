<p><%= link_to "Crear Expediente", new_expediente_path, class: "btn btn-primary btn-lg" %></p>
<hr>
<div class="row">
	<div class="col-md-6">
		<h3>Número Expediente: <%= @expediente.expediente %>&nbsp;&nbsp;Año: <%= @expediente.anio %></h3>
		<h4><%= @expediente.demandante  %> vs <%= @expediente.demandado %></h4>
		<h5>INSTANCIA: <%= @expediente.entidad_responsable.upcase %></h5>
		<h5>ESTADO PROCESAL: <%= @expediente.estado_procesal.upcase %></h5>
	</div>
	<div class="col-md-6">
		<h3>EXPEDIENTE</h3>
		<p>Ubicación: <%= @expediente.ubicacion_fisica.upcase %>, <%= @expediente.despacho.upcase %></p>
		<p>Responsable: <%= @expediente.socio.upcase %></p>
		 
		<% if !@expediente.referencia1.nil? %>
			<h5>Referencias</h5>
			<p><%= @expediente.referencia1.upcase %> </p>
		<% end %>
		<% if !@expediente.referencia2.nil? %>
			<p><%= @expediente.referencia2.upcase %> </p>
		<% end %>
		<% if !@expediente.referencia3.nil? %>
			<p><%= @expediente.referencia3.upcase %> </p>
		<% end %>
		<p>COMENTARIOS: <%= @expediente.comentarios.upcase %></p>
		
	</div>
</div>	 

<hr>
<h3> Audiencias </h3>

<table class="table">
	<thead>
   		<tr>
   			<th>ID</th>
     		<th>Fecha</th>
     		<th>Expediente</th>
     		<th>Instancia</th>
     		<th>Asignado</th>
     		<th>Estatus</th>
     		<th>Comentarios</th>
     		
   		</tr>
  	</thead>
		
	<tbody>
		<% @expediente.audiencia_expedientes.each do |audiencia| %>
			<tr>
				<td><%= audiencia.id %></td>
				<td><%= audiencia.fecha.strftime("%d/%m/%Y %H:%M:%S") if !audiencia.fecha.nil? %></td>
				<td><%= audiencia.expediente.expediente %></td> 
				<td><%= audiencia.expediente.entidad_responsable.upcase %></td>
				<td><%= audiencia.asignado.upcase %></td>
				<td><%= audiencia.estatus.upcase %></td>
				<td><%= audiencia.comentarios.upcase %></td>
			</tr>
		<% end %>
	</tbody>
</table>
	
<%= link_to "Modificar", edit_expediente_path(@expediente), class: "btn btn-success btn-lg" %>
<%= link_to 'Expedientes', expedientes_path, class: "btn btn-info btn-lg" %>
