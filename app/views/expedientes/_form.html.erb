<%= form_with(model: expediente, local: true) do |form| %>
  <% if @expediente.errors.any? %>
      <% @expediente.errors.full_messages.each do |message| %>
         <%= js add_gritter(message, title: "Expedientes", sticky: false) %>
      <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-primary btn-lg", size: 50 %>
    <%= link_to 'Expedientes', expedientes_path, class: "btn btn-info btn-lg", size: 50 %>
  </div><hr>

  <div class="row">
  	<div class="col-md-2">
    	<%= form.text_field :anio, placeholder: 'Año', :autofocus => true, class: "form-control" %>
	</div>

	<div class="col-md-2">
    	<%= form.text_field :expediente, placeholder: 'Número de Expediente', class: "form-control" %>
	</div>

	<div class="col-md-2">
    	<%= form.text_field :demandante, placeholder: 'Demandante', class: "form-control" %>
	</div>

	<div class="col-md-2">
    	<%= form.text_field :demandado, placeholder: 'Demandado', class: "form-control" %>
	</div>

	<div class="col-md-2">
    <%= form.collection_select :socio, Abogado.order(:nombre),:nombre,:nombre, include_blank: true, class: "form-control" %> 
	</div>
</div><br>
<div class="row">
  <div class="col-md-2"> Instancia:&nbsp;
    <%= form.collection_select :entidad_responsable_id, EntidadResponsable.order(:nombre),:id,:nombre, include_blank: true %>  
  </div>
  <div class="col-md-3">Estado Procesal:&nbsp;
    <%= form.collection_select :estatus_procesal_id, EstatusProcesal.order(:estatus),:id,:estatus, include_blank: true %>          
	</div>
  	<div class="col-md-1">Referencias</div>
  	<div class="col-md-2">
    	<%= form.text_field :referencia1, placeholder: 'Referencia 1', class: "form-control" %>
    </div>
    <div class="col-md-2">
    	<%= form.text_field :referencia2, placeholder: 'Referencia 2', class: "form-control" %>
    </div>
    <div class="col-md-2">
    	<%= form.text_field :referencia3, placeholder: 'Referencia 3', class: "form-control" %>
  </div>
</div>

  <div class="row">
	<hr> 
	<div class="col-md-2">
    	<%= form.text_field :ubicacion_fisica, placeholder: 'Ubicación Física', class: "form-control" %>
	</div>

	<div class="col-md-2">
    	<%= form.text_field :despacho, placeholder: 'Despacho' , class: "form-control"%>
	</div>

	<div class="col-md-2">
    <%= form.text_field :archivo, placeholder: 'Nombre de Archivo', class: "form-control" %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
    <%= form.text_area :comentarios, placeholder: 'Comentarios', cols:150, rows: 2, class: "form-control" %>
  </div>
</div>

  
  <hr>

  <h4>AUDIENCIAS</h4>
  	<div class="row">
      <div class="col-md-1"><strong>Acciones</strong></div> 
		  <div class="col-md-2"><strong>Fecha Inicio</strong></div>
      <div class="col-md-2"><strong>Fecha Fin</strong></div>
  	  <div class="col-md-1"><strong>Asignado a</strong></div>
  	  <div class="col-md-2"><strong>Comentarios</strong></div>
      <div class="col-md-2"><strong>Estatus</strong></div>  
    </div>
  <hr>
  

      <div class="row">
      	<%= form.fields_for :audiencia_expedientes do |audiencia| %>
        	<%= render 'audiencia_expediente_fields', f: audiencia %>
    	<% end %>
    <div>
 
  
<div>    
    <%= link_to_add_association 'Agregar Audiencia', form, :audiencia_expedientes, class:'btn btn-primary btn-md' %>
</div>

  

<% end %>