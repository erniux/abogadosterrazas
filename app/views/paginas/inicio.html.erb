<% if @audiencias.blank? %>
  <div class="alert alert-warning">
    <strong>No existen registros</strong>
  </div> 
<% end %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'compartidos/sidebar' %>
      </div><!-- /.col-md-3 -->
      
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="text-center">
             
          </div><hr>
          <h3 class="text-center">Pr√≥ximas Audiencias</h3><hr>
          <table class="table">
            <% @audiencias.each do |audiencia| %>
              <tr>
                <td class="middle">
                  <div class="media">
                    <div class="media-body">
                      <h4 class="media-heading"><%= link_to audiencia.expediente.expediente, audiencia.expediente %></h4>
                      <address>
                        <strong><%= audiencia.expediente.demandante.upcase %> vs <%= audiencia.expediente.demandado.upcase %></strong><br>
                        <p><%= audiencia.expediente.entidad_responsable.nombre.upcase %></p>
                        <p><%= audiencia.estatus_audiencia.estatus.upcase %></p>
                        <p>Fecha audiencia:&nbsp;<%= audiencia.fecha.strftime("%F") %>&nbsp;
                                                 <%= audiencia.fecha.strftime("%T") %>&nbsp; 
                                                  <%= ' - ' + audiencia.fecha_fin.strftime("%T") if !audiencia.fecha_fin.nil? %></p>
                         
                      </address>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </table>            
        </div>
      </div>
    </div>
  </div>