<%= form_for(@link, html: { multipart: true }, remote: local_assigns[:hide_buttons]) do |form| %>
<% if @link.errors.any? %>
      <% @link.errors.full_messages.each do |message| %>
         <%= js add_gritter(message, title: "Aviso", sticky: false) %>
      <% end %>
  <% end %>

<div class="field">
  <%= form.label :entidad %>
  <%= form.text_field :entidad, class: "form-control", placeholder: "Entidad" %>
</div>

<div class="field">
  <%= form.label :link %>
  <%= form.text_field :link, class: "form-control", placeholder: "LINK/URL" %>
</div>

  <br>
  <% unless local_assigns[:hide_buttons] %>
  <div class="actions">&nbsp;
    <%= button_tag(type: "submit", class: "btn btn-primary") do %>
      <span><i class="glyphicon glyphicon-pencil"></i> Guardar</span>
    <% end %>  
    <button type="button" class="btn btn-secondary" data-dismiss="modal">
      <span><i class="glyphicon glyphicon-list"></i></span>
      Cat√°logo
    </button>
  </div>
  <% end %>

<% end %>