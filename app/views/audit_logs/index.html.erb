<h1>Bitacora de expedientes</h1>
<%= form_tag audit_logs_path, method: :get do %>
  <div class="input-group">
      <%= text_field_tag 'term', params[:term], placeholder: "Ingrese criterio de búsqueda", class: "form-control" %>
      <span class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </span>
    </div>
  <% end %>

<table class="table">
	<thead>
		<tr>
			<th>Expediente</th>	
			<th>Acción</th>	
			<th>Fecha acción</th>
            <th>Usuario</th>
            <th>Estado Procesal</th>
            <th>Audiencias</th>
		</tr>
	</thead>
	<tbody>
		<% @bitacora.each do |bitacora| %>
			<tr>
				<td><%= bitacora.expediente %></td>
				<td><%= bitacora.accion %></td>
                <td><%= bitacora.created_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
                <td><%= bitacora.user.socio %></td>
                <td><%= bitacora.estado_procesal %></td>
                <td>
                <% i = 1 %>
                    <% valor = bitacora.audiencias(bitacora.comentarios_audicencia)  %>
                    
                    <% while i < valor.length %>
                      <li><%= valor[i] %></li>
                      <% i += 1 %>
                    <% end %>
                       
                      

                         
                </td>
			</tr>
		<% end %>

	</tbody>
</table>  
