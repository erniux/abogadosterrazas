<div class="container login">
   <h3>Sistema Control de Expedientes</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.label :'Usuario' %>
      <%= f.text_field :socio,
                        autofocus: true,
                        autocomplete: "nombre-usuario",
                        class: "form-control",
                        placeholder: "Nombre Usuario",  
                        align: 'center' %><br>
      <%= f.label :'Contraseña' %>
      <%= f.password_field :password,
                             autocomplete: "contraseña-actual",
                             class: "form-control",
                             placeholder: "Contraseña" %><br>
  
      <%= f.submit "Ingresar", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
  <% end %>
</div>

