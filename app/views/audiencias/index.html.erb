<%= month_calendar attribute: :fecha, events: (@audiencias + @vacaciones) do |date, meetings| %>
  <%= date.day %>

  <% meetings.each do |meeting| %>
    <div>
      <% if  meeting.estatus == "vacaciones" %>
        <div class="content-box-holiday">
          <%= meeting.asignado %>
        </div>
      <% else %>
    	 <% if meeting.expediente.entidad_responsable == 'BUROCRÁTICO' %>
    		<div class="content-box-buro">
      			<%= link_to (meeting.expediente.expediente.to_s + '/' + meeting.fecha.strftime("%H:%M:%S").to_s), expediente_path(meeting.expediente.id) %>	
      		</div>
      		<% elsif meeting.expediente.entidad_responsable == 'JUNTA LOCAL' %>
      		<div class="content-box-local">
      			<%= link_to (meeting.expediente.expediente.to_s + '/' + meeting.fecha.strftime("%H:%M:%S").to_s), expediente_path(meeting.expediente.id) %>	
      		</div>
      		<% elsif meeting.expediente.entidad_responsable == 'JUNTA FEDERAL' %>
      		<div class="content-box-federal">
      			<%= link_to (meeting.expediente.expediente.to_s + '/' + meeting.fecha.strftime("%H:%M:%S").to_s), expediente_path(meeting.expediente.id) %>	
			    </div>
      	<% end %>
      <% end %>
    </div>
  <% end %>
<% end %>

