<%= month_calendar attribute: :fecha, events: @audiencias do |date, meetings| %>
  <%= date.day %>

  <% meetings.each do |meeting| %>
    <div>
    	<!-- 
    		burocartico = azul
    		federal = verde
    		local = naranja
    	-->
    	<% if meeting.expediente.entidad_responsable == 'BurocrÃ¡tico' %>
    		<div class="buro">
      			<%= link_to (meeting.expediente.expediente.to_s + '/' + meeting.fecha.strftime("%H:%M:%S").to_s), expediente_path(meeting.expediente.id) %>	
      		</div>
      		<% elsif meeting.expediente.entidad_responsable == 'Junta Local' %>
      		<div class="local">
      			<%= link_to (meeting.expediente.expediente.to_s + '/' + meeting.fecha.strftime("%H:%M:%S").to_s), expediente_path(meeting.expediente.id) %>	
      		</div>
      		<% elsif meeting.expediente.entidad_responsable == 'Junta Federal' %>
      		<div class="federal">
      			<%= link_to (meeting.expediente.expediente.to_s + '/' + meeting.fecha.strftime("%H:%M:%S").to_s), expediente_path(meeting.expediente.id) %>	
			</div>
      	<% end %>
    </div>
  <% end %>
<% end %>

